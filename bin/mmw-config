runTest(){
  ./test/bats/bin/bats --tap test/mmw-config.bats
}

help(){
  echo "Welcome to MMW (config)"
  echo "Usage: mmw-config [option]"
  echo "Options: "
  echo "  create"
}

createConfigFile(){
  touch $HOME/.config/mmw.config
}

addProjNameDeclaration(){
  echo "PROJ=" >> $HOME/.config/mmw.config
}

addProjLocationDeclaration(){
  echo "PROJLOC=" >> $HOME/.config/mmw.config
}

addProjFilePathDeclaration(){
  echo "PROJPATH=\$HOME\$PROJLOC\$PROJ" >> $HOME/.config/mmw.config
}


addArtistDeclaration(){
  echo "ARTIST=" >> $HOME/.config/mmw.config
}
addServiceDeclaration(){
  echo "SERVICE=" >> $HOME/.config/mmw.config
}

create(){
  createConfigFile
  addProjNameDeclaration
  addProjLocationDeclaration
  addProjFilePathDeclaration
  addArtistDeclaration
}

"$@"
