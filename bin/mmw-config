runTest(){
  ./test/bats/bin/bats --tap test/mmw-config.bats
}

help(){
  echo "Welcome to MMW (config)"
  echo "Usage: mmw-config [option]"
  echo "Options: "
  echo "  create"
}

createConfigFile(){
  touch $HOME/.config/mmw.config
}

addProjNameDeclaration(){
  echo "PROJ=" >> $HOME/.config/mmw.config
}

addProjLocationDeclaration(){
  echo "PROJLOC=" >> $HOME/.config/mmw.config
}

addStartTimeDeclaration(){
  echo "START_TIME=" >> $HOME/.config/mmw.config
}

addDurDeclaration(){
  echo "DUR=" >> $HOME/.config/mmw.config
}

addTempoDeclaration(){
  echo "TEMPO=" >> $HOME/.config/mmw.config
}

addDurDeclaration(){
  echo "DUR=" >> $HOME/.config/mmw.config
  echo "LENGTH=" >> $HOME/.config/mmw.config
}

addProjFilePathDeclaration(){ 
  echo "PROJPATH=\$HOME/\$PROJLOC/\$PROJ" >> $HOME/.config/mmw.config
}

addScoreDeclarationAndDefinition(){
  echo "SCORE=\$HOME/\$PROJLOC/\$PROJ.ly" >> $HOME/.config/mmw.config
}

addArtistDeclaration(){
  echo "ARTIST=" >> $HOME/.config/mmw.config
}
addWAVDeclaration(){
  echo "WAV=\$HOME/audio/\$ARTIST/\$PROJ/stems/\$PROJ.wav" >> $HOME/.config/mmw.config
}

addSessionDeclaration(){
  echo "SESSION=session/*." >> $HOME/.config/mmw.config
}

addServiceDeclaration(){
  echo "SERVICE=" >> $HOME/.config/mmw.config
}

create(){
  createConfigFile
  addProjNameDeclaration
  addProjLocationDeclaration
  addProjFilePathDeclaration
  addArtistDeclaration
  addSessionDeclaration
  addTempoDeclaration
  addScoreDeclarationAndDefinition
  addStartTimeDeclaration
  addDurDeclaration
}

"$@"
